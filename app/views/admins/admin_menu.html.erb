<div class="container mb-5">
    <div class="row d-flex justify-content-center mt-5">
        <div class="col-12 col-md-9 col-lg-7 text-center">
            <h1 class="mb-2">Admin options</h1>
            <p>See users and edit them</p>
        </div>
    </div>

    <h3>Application Users</h3>
    <hr class="mb-5">

    <div class="row d-flex">
        <% @users.each do |user| %>
            <div class="col-12 col-md-6">
                <div class="bg-light py-3 px-3 rounded mb-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <p class="m-0"><%= user.full_name %></p>
                            <p class="m-0"><%= user.email %></p>
                            <h5><span class="badge bg-secondary"><%= user.authorization_tier.capitalize %></span></h5>
                        </div>
                        <%= link_to 'See end edit user', user_path(user), class: 'btn btn-primary' %>
                    </div>
                </div>
            </div>
        <% end %>
    </div>

</div>
