<div class="container mb-5">
    <%= render 'pg_header', task_show_page_header %>

    <div class="bg-dark rounded p-4 my-4 text-white">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <p class="h5 m-0">Task</p>
                <p class="m-0"><%= @task.title %></p>
            </div>
            <div>
                <%= link_to 'Return to task lists', board_task_lists_path(@task.board), class: 'btn btn-primary' %>
            </div>
        </div>
    </div>

    <div class="row d-flex justify-content-center">
        <div class="col-12 col-lg-8">
            <%= render 'task', task: @task %>
        </div>
    </div>

    <div class="row d-flex justify-content-center mt-2">
        <div class="col-12 col-lg-8">
            <%= render 'task_records_list', records: @task.task_change_records %>
        </div>
    </div>

    <div class="mt-5 text-center">
        <h2>Users</h2>
        <hr class="mb-5">
    </div>

    <div class="row d-flex justify-content-center mt-2">
        <div class="col-12 col-lg-8">
            <div class="card">
                <div class="card-header">
                    <p class="m-0">Add User</p>
                </div>
                <div class="card-body">
                    <%= form_with url: '/task_users', method: :post do |form| %>
                        <%= hidden_field_tag :task_id, @task.id %>
                        <div class="form-group mb-3">
                            <%= form.label :Email %>
                            <%= form.text_field :email, class: 'form-control' %>
                        </div>

                        <div class="d-flex justify-content-end">
                            <%= form.submit 'Add', class: 'btn btn-success' %>
                        </div>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>
