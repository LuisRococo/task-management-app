<div class="container">
    <%= render 'pg_header', task_list_new_header %>

    <div class="row d-flex justify-content-center">
        <div class="col-12 col-lg-7">
            <%= form_with model: @task_list do |form| %>
                <div class="row">
                    <div class="form-group mb-3 col-12 col-md-6">
                        <%= form.label :name %>
                        <%= form.text_field :name, class: 'form-control', placeholder: 'Enter a name for your list' %>
                    </div>

                    <div class="form-group mb-3 col-12 col-md-6">
                        <%= form.label :priority %>
                        <%= form.number_field :priority, class: 'form-control', placeholder: 'Enter a priority for your list',in: 1..10000, step: 1 %>
                    </div>

                    <div class="form-group mb-3 col-12 col-md-6">
                        <%= form.label :color %>
                        <%= form.color_field :color, class: 'form-control p-0 cl-picker' %>
                    </div>
                </div>

                <div class="d-flex justify-content-end mt-5">
                    <%= link_to boards_path  do %>
                        <button class='btn btn-primary me-2'>Return</button>
                    <% end %>
                    <%= form.submit class: 'btn btn-success' %>
                </div>
            <% end %>
        </div>
    </div>
</div>
