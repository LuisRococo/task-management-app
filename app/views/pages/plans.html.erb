<div class="container">
    <%= render 'pg_header', { title: 'Prices and plans', text: 'Lorem ipsum dolor sit amet, consectetur adipisicing elit. Temporibus quos quisquam molestiae quo commodi beatae cum debitis natus nihil repudiandae.' } %>

    <div class="row d-flex justify-content-center">
        <% @plans.each do |plan| %>
            <div class="col-xm-12 col-md-4">
                <%= render 'pages/plan_card',
                            { title: plan.title,
                            price: plan.price.to_s,
                            month_quantity: plan.time_months } %>
            </div>
        <% end %>
    </div>
</div>
